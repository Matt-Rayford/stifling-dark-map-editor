{
	
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["es2020", "dom"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"@/*": ["./src/*"]
		},
		"rootDirs": ["src"],
		"target": "es2020",
		"types": ["node"],
	},
	"compileOnSave": true,
	"exclude": ["node_modules", "tsconfig.json"],
	"include": ["**/*.ts"]
}
