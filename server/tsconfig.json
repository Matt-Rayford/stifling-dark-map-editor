{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"rootDirs": ["src"],
		"outDir": "dist",
		"lib": ["es2020", "dom"],
		"target": "es2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"]
	},
	"compileOnSave": true,
	"exclude": ["node_modules", "tsconfig.json"],
	"include": ["**/*.ts"]
}
